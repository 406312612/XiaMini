{
  "manifest_version": 2,
  "name": "Xiami Mini",
  "description": "Xiami Mini",
  "version": "1.3",
  "icons": { "16": "xiami.png",
           "48": "xiami.png",
          "128": "xiami.png" },
  "background":{
    "scripts": ["background.js"],
	"persistent": true
  },  
  "browser_action": {
    "default_icon": "xiami.png",
	 "default_title": "XiaMini",      
     "default_popup": "popup.html"   
  },
  "permissions": [
	"storage", "tabs", "http://www.xiami.com/*"
  ],
  "web_accessible_resources": [
    "xiaMini.css", "xiaMini-album.css", "xiaMini-collection.css", "xiaMini-guess.css"
  ]
}

