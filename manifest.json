{
  "manifest_version": 2,
  "name": "Xiami Mini (t-LRC 虾翻内测版)",
  "description": "Xiami Mini",
  "version": "1.9",
  "icons": { "16": "xiami.png",
           "48": "xiami.png",
          "128": "xiami.png" },
  "background":{
    "scripts": ["background.js"],
	"persistent": true
  },  
  "browser_action": {
    "default_icon": "xiami.png",
	 "default_title": "XiaMini",      
     "default_popup": "popup.html"   
  },
  "permissions": [
	"storage", "tabs", "http://www.xiami.com/*", "http://g.tbcdn.cn/*", "webRequest", "webRequestBlocking"
  ],
  "content_scripts": [
   {
      "matches":    ["http://www.xiami.com/play*"],
      "js":        ["jquery-2.1.1.min.js", "XiaMi OpenPlay.user.js"]
   },
   {
      "matches":    ["http://www.xiami.com/*"],
      "js":        ["XiaMi paging.user.js", "renderGroup.js"]
   }
  ],
  "web_accessible_resources": [
    "xiaMini.css", "xiaMini-album.css", "xiaMini-collection.css", "xiaMini-guess.css", "hideTrans.css", "lyricsnotes.html", "player.js"
  ]
}

