{
  "manifest_version": 2,
  "name": "Xiami Mini",
  "description": "Xiami Mini",
  "version": "1.0",
  "icons": { "16": "xiami.png",
           "48": "xiami.png",
          "128": "xiami.png" },
  "browser_action": {
    "default_icon": "xiami.png"
  },
  "content_scripts": [
   {
      "matches":    ["http://www.xiami.com/"],
      "css":        ["xiaMini.css"]
   },
   {
      "matches":    ["http://www.xiami.com/fresh*"],
      "css":        ["xiaMini.css"]
   },
   {
      "matches":    ["http://www.xiami.com/album/*"],
      "css":        ["xiaMini-album.css"]
   },
   {
      "matches":    ["http://www.xiami.com/song/*"],
      "css":        ["xiaMini.css"]
   },
   {
      "matches":    ["http://www.xiami.com/play*"],
      "css":        ["xiaMini.css"]
   }
  ]
}

